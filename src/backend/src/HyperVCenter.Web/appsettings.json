{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=hypervcenteer;Username=hyperv;Password=hyperv"
  },
  "HyperV": {
    "UseStubService": true,
    "SyncIntervalSeconds": 60
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  },
  "AllowedHosts": "*"
}
